<h1>Gestionnaire de livres</h1>
<% @books.each do |book| %>
  <p><%= book.title %></p>
<% end %>
<%= form_tag "/books", method: "post" do %>
  <input type="text" name="title" />
  <input type="submit" value="Ajouter le livre" />
<% end %>
<h2>Liste des livres</h2>
<% @books.each do |book| %>
  <p><a href="/books/<%= book.id %>"><%= book.title %></a></p>
<% end %>
